<h1>Lista de productos</h1>
<a href="<%= new_product_path %>" class="btn btn-primary btn-icon-split">
  <span class="icon text-white-50">
    <i class="fa fa-plus"></i>
  </span>
  <span class="text">Crear productos</span>
</a>
<%= link_to 'Exportar a excel', products_path(format: :xlsx), class: 'btn btn-success' %>
<br />
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Referencia</th>
      <th>Cantidad</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= product.name %>
      </td>
      <td>
        <%= product.reference %>
      </td>
      <td>
        <%= product.quantity %>
      </td>
      <td>
        <%= link_to "Detalles", product_path(product), class: "btn btn-primary" %>
      </td>
  <% end %>
  </tbody>
</table>

